<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="General"
        android:key="pref_key_storage_settings">

        <ListPreference
            android:key="language_preference"
            android:title="Language"
            android:entries="@array/languages"
            android:entryValues="@array/language_codes"
            android:summary="%s"/>

        <CheckBoxPreference
            android:key="@string/preference_sync"
            android:title="Auto-Sync"
            android:summary="Sync news automatically"
            android:defaultValue="true" />

        <CheckBoxPreference
            android:key="pref_notifications"
            android:title="Show notifications"
            android:summary="Show notifications when there is unread content"
            android:defaultValue="true" />

        <EditTextPreference
            android:key="@string/filter_preference"
            android:title="Filter notifications by pattern"
            android:summary="Show notifications only if they contain certain text"
            android:dialogMessage="Please enter a list of chosen patterns, they must be comma-separated..."
            android:hint="Analysis 1, Physics, ..."/>

    </PreferenceCategory>

</PreferenceScreen>

